each contact in contacts
  .row
    .col-md-12
      .panel.panel-default
        .panel-body
          .row
            .col-md-4
              h5= contact.firstName + ' ' + contact.lastName
          .row
            .col-md-12
              if contact.phoneNumber
                p= 'Phone #: ' + contact.phoneNumber

              if contact.email
                p= 'Email: ' + contact.email

              if contact.bumpedAt
                p= 'bumpedAt: ' + moment(contact.bumpedAt).format('M/D/YYYY h:mma')
                form(action='/clearBump' method='POST')
                  input.hidden(name='contactId' value=contact._id)
                  .text-right
                    button.btn.btn-success(type='submit')
                      i.fa.fa-check-square-o(aria-hidden='true')
                      |  Contacted
              else
                p= 'Next bump: ' + moment(contact.needsBumpAt).format('M/D/YYYY h:mma')
